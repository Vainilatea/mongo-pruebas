    db.movies.find({"type": {"$eq": "series"}, "year": {"$gt": 2000}, "imdb.rating": {"$gt": 5.1}})
    db.movies.countDocuments({"type": {"$eq": "series"}, "year": {"$gt": 2000}})
    db.movies.find({"type": {"$eq": "series"}, "year": {"$gt": 2000, "$lt": 2005}})
    db.movies.find({"type": {"$eq": "series"}, "$and": [{"year": {"$gt": 2000, "$lt": 2005}}, {"imdb.rating": {"$gt": 5.1}}]})
    db.movies.find({"type": "series", "year": {"$gt": 2000, "$lt": 2005}, "imdb.rating": {"$gt": 5.1}}) //mejor
    db.movies.find({"type": "series", "$and": [{"year": {"$gt": 2000}}, {"title": {"$regex": "A", "$options": "i"}}]}, {"title": 1, "_id": 0, "year": 1}) //con proyeccion, option i es para que sea insensible a mayuscula o minuscula, ^ es para que empiece "$regex": "^the"
    db.movies.find({"type": "series", "$and": [{"year": {"$gt": 2000}}, {"title": {"$regex": "A", "$options": "i"}}]})
    db.movies.find({"type": "movie", "$or": [{"year": {"$gt": 1979, "$lt": 2001}}, {"languages": ["French"]}]}) // solo con idioma frances sin el in
    db.movies.countDocuments({"type": "movie", "$or": [{"year": {"$gt": 1979, "$lt": 2001}}, {"languages": { "$in": ["French"]}}]}) // que incluya frances pero tambien otros idiomas si hay
    db.movies.countDocuments({"type": "movie", "$or": [{"year": {"$gt": 1979, "$lt": 2001}}, {"languages": { "$all": ["French", "English"]}}]}) //incluye frances e ingles
    